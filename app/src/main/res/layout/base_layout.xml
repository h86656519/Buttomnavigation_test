<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/mainLinearLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:id="@+id/mainTitle"
            android:background="@drawable/title_bar"
            >

        <TextView
                android:id="@+id/btnBack"
                android:text="@string/common_button_back"
                android:background="@drawable/customer_button"
                android:layout_width="@dimen/title2TextButtonW"
                android:layout_height="@dimen/titleButtonH"
                android:textSize="@dimen/titleButtonTextSize"
                android:padding="0dip"
                android:textColor="@color/buttonTextColor"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="5dip"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                >
        </TextView>

    </RelativeLayout>

    <ListView android:id="@+id/commonList"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1.0"/>

</LinearLayout>

